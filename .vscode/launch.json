    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for XDebug",
            "type": "php",
            "request": "launch",
            "port": 9003,
            // server -> local
            "pathMappings": {
                "/var/www/config": "${workspaceFolder}/config",
                "/var/www/src": "${workspaceFolder}/src",
                "/var/www/tests": "${workspaceFolder}/tests",
                "/var/www/public": "${workspaceFolder}/public",
                "/var/www/vendor": "${workspaceFolder}/vendor",
                "/var/www/bin": "${workspaceFolder}/bin",
            }
        },
        {
            "name": "Launch currently open script",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "port": 9000
        }
    ]
}
